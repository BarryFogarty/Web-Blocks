@using Umbraco.Web.Security
@inherits Umbraco.Web.Mvc.UmbracoTemplatePage

@{
    Layout = "Global.cshtml";
}

@section headContent {}

@section Content {
    <div>
        @if (Request.IsAuthenticated)
        {
            <h1>Hello, @(new MembershipHelper(UmbracoContext.Current).CurrentUserName)</h1>
        }
    </div>
    <div class="content-page-full-width">
        @Html.Container("webblocks", new Container
        {
            Attributes = new Dictionary<string, string> { { "id", "main-container" } },
            Classes = "main-container",
            Name = "mainContainer",
            Tag = "main",          
            WysiwygClass = "wysiwyg",
            Blocks = new List<WebBlocks.Interfaces.IBlock>
            {
                new ContentBlock(1104),
                new WysiwygBlock { Id = 1, Content = "Enter Content Here" }
            }
        })
    </div>
}