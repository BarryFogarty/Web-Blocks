@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@using Sandbox.Website.CustomContainers;

@{
    Layout = "Global.cshtml";
}

@section headContent {}

@section Content {
    <div class="home-page">
        <section id="hero" class="hero-slider-container">
            @Html.Container(new Container()
            {
                Name = "heroSliderContainer",
                Classes = "hero-slider-container",
                ContainerController = new WebBlocks.Model.ContainerControllerDefinition(typeof(SliderContainerController)),
                ContainerPermissions = new WebBlocks.Model.AllowedBlocks("HeroSlide")
            })
        </section>

        @Html.Container(new Container()
        {
            Name = "homeMainContainer",
            Tag = "section",
            Attributes = new Dictionary<string, string> { { "id", "main-container" } },
            WysiwygClass = "wysiwyg",
            Classes = "main-container"
        })
</div>
}